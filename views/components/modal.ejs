<% if( url.url ){%>
<div id="pageLoadModal" class="fixed top-4 right-4 z-50 p-2">
  <div class="bg-white rounded-lg max-w-xs shadow-lg border border-gray-200">
    <img src="<%= url.url %>" alt="Popup Image" class="max-w-full h-auto rounded-t-lg" />
    <div class="p-2 text-right">
      <button id="closeModal" class="text-sm px-3 py-1 bg-gray-800 text-white rounded hover:bg-gray-700">
        Close
      </button>
    </div>
  </div>
</div>
<%}%>    